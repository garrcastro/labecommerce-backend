{
  "compilerOptions": {
    
    "target": "ES6",                                 
    "module": "commonjs",                               
    "rootDir": "./src",       
    "sourceMap": true,                  
    "outDir": "./build",      
    "removeComments": true,        
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                           
    "noImplicitAny": true,               
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  }
}
